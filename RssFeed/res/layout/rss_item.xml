<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >
    
	<ImageView
	    android:id="@+id/foundation_feed_img"
	    android:layout_width="32dp"
	    android:layout_height="32dp"
	    android:layout_centerVertical="true"
	    android:contentDescription="@string/foundation_feed_icon"
	    android:layout_margin="2dp"
	    android:src="@drawable/mozilla_foundation_feed_icon" />

	<TextView
	    android:id="@+id/title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/foundation_feed_img"
	    android:layout_marginLeft="3dp"
	    android:textColor="#000000"/>
	
	<TextView
	    android:id="@+id/description"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/title"
	    android:layout_toRightOf="@id/foundation_feed_img"
	    android:layout_marginLeft="2dp"
	    android:textColor="#628AB5"/>
       
</RelativeLayout>